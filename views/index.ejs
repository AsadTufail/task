<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
</head>

<body>
    <div class="container p-50">
        <div class="row p-50 d-flex justify-content-center">
            <div class="col-6">
                <form action="/" method="post">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Name</label>
                        <input type="text" name="name" class="form-control" value="<%= obj.name %>" id="exampleInputEmail1" aria-describedby="emailHelp"
                            placeholder="Enter name">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Description</label>
                        <textarea type="text" name="description" class="form-control" id="description" placeholder="Enter description"><%= obj.description %></textarea>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Image URL</label>
                        <input type="text" name="image" class="form-control" value="<%= obj.image %>" id="exampleInputPassword1" placeholder="Enter image URL">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Edition</label>
                        <input type="number" name="edition" class="form-control" value="<%= obj.edition %>" id="exampleInputPassword1" placeholder="Enter edition">
                    </div>
                    <label for="Attributes"><b>Attributes</b></label>
                    <% for (var i = 0; i < obj.attributes.length; i++) { %>
                        <div class="form-group">
                            <label for="exampleInputPassword1"><%= obj.attributes[i].trait_type.charAt(0).toUpperCase() + obj.attributes[i].trait_type.slice(1); %></label>
                            <input type="text" name="<%= obj.attributes[i].trait_type.replace(/ /g,'_'); %>" class="form-control" value="<%= obj.attributes[i].value %>" id="exampleInputPassword1" placeholder="Enter edition">
                        </div>
                    <% } %>
                    <div class="mt-4">
                        <button type="submit" class="form-control btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Scripts only -->
    <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
    <script src="/main.js"></script>

</body>
</html>